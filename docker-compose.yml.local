web: &web
  build: .
  command: bundle exec puma -C config/puma.rb
  environment:
    - RACK_ENV=development
  ports:
    - 3000:3000
  volumes:
    - .:/app
  links:
    - database
    - redis
worker:
  <<: *web
  ports: []
  command: bash -c "clamd && bundle exec sidekiq -C ./config/sidekiq.yml"
redis:
  image: convox/redis
database:
  image: convox/postgres
  ports:
    - 5432
