web:
  build: .
  command: bundle exec puma -C app/config/puma.rb
  links:
    - database
    - redis
  ports:
    - "3000:3000"
worker:
  build: .
  command: bundle exec sidekiq -C .app/config/sidekiq.yml
  links:
    - database
    - redis
database:
  image: postgres:9.4
  environment:
    - LINK_SCHEME=postgres
    - LINK_PASSWORD=password
    - LINK_USERNAME=postgres
  ports:
    - 5432
  volumes:
    - /var/lib/postgresql/data
redis:
  image: convox/redis
  ports:
    - 6379
