web:
  build: .
  command: [bundle, exec, puma, -C, config/puma.rb]
  links:
    - database
    - redis
  ports:
    - "3000:3000"
worker:
  build: .
  command: ["/sbin/my_init"]
  links:
    - database
    - redis
database:
  image: convox/postgres
  environment:
    - LINK_SCHEME=postgres
    - LINK_PASSWORD=password
    - LINK_USERNAME=postgres
  ports:
    - 5432
  volumes:
    - /var/lib/postgresql/data
redis:
  image: convox/redis
  ports:
    - 6379
