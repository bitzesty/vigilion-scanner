version: "3.9"
services:
  web:
    environment:
    - REDIS_URL=redis:6379
    build: .
    command: ["/sbin/my_init"]
    links:
      - database
      - redis
    ports:
      - "3000:3000"
  database:
    image: convox/postgres
    environment:
      - LINK_SCHEME=postgres
      - LINK_PASSWORD=password
      - LINK_USERNAME=postgres
    ports:
      - 5432
    volumes:
      - /var/lib/postgresql/data
  redis:
    image: convox/redis
    ports:
      - 6379